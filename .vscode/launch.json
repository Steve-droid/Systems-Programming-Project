{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Test",  // Path to the executable
            "args": ["test.as"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",  // Set the working directory to the project folder
            "environment": [],
            "externalConsole": false,  // Use internal console
            "MIMode": "lldb",
            "preLaunchTask": "build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "engineLogging": false,  // Disable engine logging
                "trace": false,  // Disable tracing
                "traceResponse": false  // Disable trace response
            },
            "internalConsoleOptions": "openOnSessionStart"  // Ensure internal console is used
        }
    ]
}
